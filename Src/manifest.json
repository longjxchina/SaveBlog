{
	"manifest_version": 2,
	"name": "收集博客",
	"version": "1.0",
	"description": "收集博客",
	"background": { "scripts": ["background.js"] },
	"browser_action": {
		"default_icon": "icon48.png",
		"default_title":"收集博客"
	},
    "icons":{
      "16":"icon48.png",
      "48":"icon48.png",
      "128":"icon48.png"
    },
	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js":["jquery-1.9.1.min.js",				
                "GlobalStorage.js",
                "rangy-core.js",
				"main.js"],
			"css":["main.css"],
		"all_frames": false
		}
	],
	"permissions": [
		"tabs", 
		"http://*/*", 
		"https://*/*",
		"clipboardRead",
		"clipboardWrite",
        "storage",
        "unlimitedStorage"
	],	
	"optional_permissions":[
		"clipboardRead",
		"clipboardWrite"
	]
}