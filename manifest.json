{
	"manifest_version": 2,
	"name": "收集博客",
	"version": "0.1",
	"description": "收集博客",
	"background": { "scripts": ["background.js"] },
	"browser_action": {
		"default_icon": "icon.jpg"	
	},
	"permissions": [
		"tabs", 
		"http://*/*", 
		"https://*/*",
		"clipboardRead",
		"clipboardWrite"
	],	
	"optional_permissions":[
		"clipboardRead",
		"clipboardWrite"
	],

	"content_scripts": [
		{
			"matches": [ "*://*/*" ],
			"js":["jquery-1.9.1.min.js",
				"rangy-core.js",
				"main.js"],
			"css":["main.css"],
		"all_frames": true
		}
	]
}